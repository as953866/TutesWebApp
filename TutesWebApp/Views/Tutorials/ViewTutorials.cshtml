@model IEnumerable<TutesWebApp.Models.Tutorials>

@{
    ViewData["Title"] = "ViewTutorials";
}

<div class="text-center">
    <h1 class="display-4">Our Tutorials</h1>
</div>
<div class="card-columns">
    @foreach (var item in Model)
    {
        <div class="card">
            <div class="card-img">
                <img class="card-img-top" src="../../uploads/@item.TutorialID@item.ExtName" style="height:250px;" alt="Card image">
            </div>
            <div class="card-body">
                <h5 class="card-title">@item.TutorialTitle</h5>
                <a class="btn btn-primary" asp-action="TutorialDetails" asp-route-id="@item.TutorialID">View Details</a>
            </div>
        </div>
    }
</div>